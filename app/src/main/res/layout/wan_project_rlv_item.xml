<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="@dimen/x20"
    app:cardUseCompatPadding="true"
    android:layout_margin="@dimen/x10">


    <RelativeLayout
        android:layout_margin="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/wan_project_item_img1"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/x300"
            android:layout_margin="@dimen/x5"
            android:src="@mipmap/icon_wan_android"/>




        <ImageView
            android:id="@+id/wan_project_item_img"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x50"
            android:layout_margin="@dimen/x10"
            android:layout_toRightOf="@+id/wan_project_item_img1"
            android:src="@drawable/ic_launcher_round"/>


        <TextView
            android:id="@+id/wan_project_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:textColor="#000"
            android:layout_below="@+id/wan_project_item_desc"
            android:layout_toRightOf="@+id/wan_project_item_niceDate"
            android:text="123"/>




        <TextView
            android:id="@+id/wan_project_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="4"
            android:ellipsize="end"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/wan_project_item_img1"
            android:layout_below="@id/wan_project_item_img"
            android:layout_margin="@dimen/x10"
            android:textColor="#000"
            android:text="123"/>







        <TextView
            android:id="@+id/wan_project_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/wan_project_item_img"
            android:layout_marginTop="@dimen/x10"
            android:textColor="#03A9F4"
            android:text="123"/>














        <TextView
            android:id="@+id/wan_project_item_niceDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:textColor="#000"
            android:layout_toRightOf="@+id/wan_project_item_img1"
            android:layout_below="@+id/wan_project_item_desc"
            android:text="123"/>





        <!--<ImageView-->
            <!--android:id="@+id/wan_homer_img4"-->
            <!--android:layout_width="@dimen/x30"-->
            <!--android:layout_height="@dimen/x30"-->
            <!--android:layout_below="@+id/wan_homer_title"-->
            <!--android:layout_marginRight="@dimen/x30"-->
            <!--android:layout_marginTop="@dimen/x10"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@drawable/ic_new"/>-->


    </RelativeLayout>






</androidx.cardview.widget.CardView>
