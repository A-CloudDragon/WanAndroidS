<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x20"
    android:background="#FFFFFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="#FFF9F9"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pop_hotkey_exit"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/x60"
            android:layout_margin="@dimen/x40"
            android:layout_gravity="center_vertical"
            android:src="@drawable/left"/>



        <SearchView
            android:id="@+id/pop_hotkey_search"
            android:layout_width="@dimen/x350"
            android:layout_height="@dimen/x70"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:text="搜索"
            android:textSize="25sp" />


        <Button
            android:id="@+id/pop_hotkey_but_search"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x70"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:text="搜索"
            android:background="#FF6132"
            android:textColor="#FFFFFF"
            />
    </LinearLayout>


    <TextView
        android:layout_marginTop="@dimen/x30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF776C"
        android:text="热搜"
        android:textSize="30sp"/>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pop_hotkey_rlv1"
        android:layout_marginTop="@dimen/x20"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="@dimen/x200"/>


<LinearLayout
    android:layout_marginTop="@dimen/x30"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x100"
    android:orientation="horizontal">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索历史"
        android:textColor="#03A9F4"
        android:textSize="30sp"/>



    <ImageView
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/x60"
        android:layout_marginLeft="@dimen/x350"
        android:layout_gravity="center_vertical"
        android:src="@drawable/left"/>


    <TextView
        android:id="@+id/pop_hotkey_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="清空"
        android:textSize="20sp"/>

</LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pop_hotkey_rlv2"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
